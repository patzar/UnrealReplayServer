@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<UnrealReplayServer.Databases.Models.Session>

@{
    ViewData["Title"] = "Index";
}

@using System.Security.Principal
@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">Hello @User.Identity.Name!</li>
        <li><a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a></li>
    </ul>
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsLive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Changelist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlatformFriendlyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDemoTimeMs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalUploadedBytes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalChunks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternalUsers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsLive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Changelist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlatformFriendlyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDemoTimeMs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalUploadedBytes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalChunks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InternalUsers)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.SessionName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SessionName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
